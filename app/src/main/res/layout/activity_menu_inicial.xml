<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menu_inicial_fundo_login_usuario"
        android:layout_width="0dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:color/holo_green_light" />

    <TextView
        android:id="@+id/menu_inicial_texto_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/ic_cadastro_nome"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/menu_inicial_fundo_login_usuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_inicial_fundo_login_usuario"
        tools:text=" Fernandes" />

    <ImageView
        android:id="@+id/menu_inicial_fundo_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_inicial_fundo_login_usuario"
        app:srcCompat="@android:color/holo_green_dark" />

    <Button
        android:id="@+id/menu_inicial_botao_procurar_quadras_redor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/fundo_botao_branco"
        android:text="Procurar quadras ao redor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/menu_inicial_fundo_menu" />

    <Button
        android:id="@+id/menu_inicial_botao_historico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/fundo_botao_branco"
        android:text="Histórico"
        app:layout_constraintEnd_toEndOf="@+id/menu_inicial_botao_procurar_quadras_redor"
        app:layout_constraintStart_toStartOf="@+id/menu_inicial_botao_procurar_quadras_redor"
        app:layout_constraintTop_toBottomOf="@+id/menu_inicial_botao_procurar_quadras_redor" />

    <Button
        android:id="@+id/menu_inicial_botao_editar_informacoes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/fundo_botao_branco"
        android:text="Editar Informações"
        app:layout_constraintEnd_toEndOf="@+id/menu_inicial_botao_procurar_quadras_redor"
        app:layout_constraintStart_toStartOf="@+id/menu_inicial_botao_procurar_quadras_redor"
        app:layout_constraintTop_toBottomOf="@+id/menu_inicial_botao_historico" />

    <Button
        android:id="@+id/menu_inicial_sair"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/fundo_botao_branco"
        android:text="Sair"
        app:layout_constraintEnd_toEndOf="@+id/menu_inicial_botao_procurar_quadras_redor"
        app:layout_constraintStart_toStartOf="@+id/menu_inicial_botao_procurar_quadras_redor"
        app:layout_constraintTop_toBottomOf="@+id/menu_inicial_botao_editar_informacoes" />

</android.support.constraint.ConstraintLayout>